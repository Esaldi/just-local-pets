<!DOCTYPE html>
<html lang="en">
<head>
  <title>Just Local Pets</title>
  <meta charset="utf-8">
</head>
<body>
  <h1>Just Local Pets</h1>
  <script>
let token = {
  "access_token": "<%= access_token %>",
  "exires_at": <%= expires_at %>
};

const getHeader = function(aToken) {
  return {
    method: "GET",
    headers: {
      "Accept": "application/json",
      "Content-Type": "application/json",
      "Authorization": `Bearer ${aToken.access_token}`
    }
  };
};

const getAnimals = async function() {
  const header = getHeader(token);
  const response = await fetch(
    "https://api.petfinder.com/v2/animals?sort=random&limit=5",
    header
  );
  const data = await response.json();
  console.log(data);
}

getAnimals();
  </script>
</body>
</html>

